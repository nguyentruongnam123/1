        "# B∆∞·ªõc 3: Import th∆∞ vi·ªán\n",
        "import time\n",
        "from selenium import webdriver\n",
        "from selenium.webdriver.common.by import By\n",
        "from selenium.webdriver.support.ui import WebDriverWait\n",
        "from selenium.webdriver.support import expected_conditions as EC\n",
        "from selenium.webdriver.chrome.options import Options\n",
        "from selenium.webdriver.chrome.service import Service\n",
        "from webdriver_manager.chrome import ChromeDriverManager\n",
        "from datetime import datetime\n",
        "\n",
        "# B∆∞·ªõc 4: Code Bot\n",
        "class VioEduBot:\n",
        "    def __init__(self, username, password):\n",
        "        self.username = username\n",
        "        self.password = password\n",
        "        self.base_url = \"https://vio.edu.vn/login\"\n",
        "        self.driver = None\n",
        "\n",
        "    def setup_driver(self):\n",
        "        \"\"\"Thi·∫øt l·∫≠p Chrome driver cho Colab\"\"\"\n",
        "        chrome_options = Options()\n",
        "        chrome_options.add_argument('--headless=new')\n",
        "        chrome_options.add_argument('--no-sandbox')\n",
        "        chrome_options.add_argument('--disable-dev-shm-usage')\n",
        "        chrome_options.add_argument('--disable-gpu')\n",
        "        chrome_options.add_argument('--window-size=1920,1080')\n",
        "        chrome_options.add_argument('--disable-blink-features=AutomationControlled')\n",
        "        chrome_options.add_argument('--user-agent=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36')\n",
        "        chrome_options.add_experimental_option(\"excludeSwitches\", [\"enable-automation\"])\n",
        "        chrome_options.add_experimental_option('useAutomationExtension', False)\n",
        "\n",
        "        try:\n",
        "            service = Service(ChromeDriverManager().install())\n",
        "            self.driver = webdriver.Chrome(service=service, options=chrome_options)\n",
        "            self.driver.execute_cdp_cmd('Network.setUserAgentOverride', {\n",
        "                \"userAgent\": 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36'\n",
        "            })\n",
        "            self.driver.execute_script(\"Object.defineProperty(navigator, 'webdriver', {get: () => undefined})\")\n",
        "\n",
        "            print(\"‚úÖ ƒê√£ kh·ªüi t·∫°o Chrome driver th√†nh c√¥ng\")\n",
        "            return True\n",
        "        except Exception as e:\n",
        "            print(f\"‚ùå L·ªói kh·ªüi t·∫°o driver: {str(e)}\")\n",
        "            return False\n",
        "\n",
        "    def login(self):\n",
        "        \"\"\"ƒêƒÉng nh·∫≠p v√†o Vio Edu\"\"\"\n",
        "        try:\n",
        "            print(\"\\n\" + \"=\"*60)\n",
        "            print(\"üîê ƒêƒÇNG NH·∫¨P\")\n",
        "            print(\"=\"*60)\n",
        "\n",
        "            self.driver.get(self.base_url)\n",
        "            time.sleep(3)\n",
        "\n",
        "            # X·ª≠ l√Ω popup thi·∫øt b·ªã\n",
        "            try:\n",
        "                time.sleep(1)\n",
        "                try:\n",
        "                    logout_all_btn = self.driver.find_element(By.CLASS_NAME, \"_3gaUs\")\n",
        "                    print(\"‚ö†Ô∏è Ph√°t hi·ªán popup thi·∫øt b·ªã - ƒêƒÉng xu·∫•t to√†n b·ªô...\")\n",
        "                    logout_all_btn.click()\n",
        "                    time.sleep(3)\n",
        "                    print(\"‚úÖ ƒê√£ ƒë√≥ng popup\")\n",
        "                except:\n",
        "                    logout_all_btn = self.driver.find_element(\n",
        "                        By.XPATH,\n",
        "                        \"//button[contains(text(), 'ƒêƒÉng xu·∫•t to√†n b·ªô thi·∫øt b·ªã')]\"\n",
        "                    )\n",
        "                    print(\"‚ö†Ô∏è Ph√°t hi·ªán popup thi·∫øt b·ªã - ƒêƒÉng xu·∫•t to√†n b·ªô...\")\n",
        "                    logout_all_btn.click()\n",
        "                    time.sleep(3)\n",
        "                    print(\"‚úÖ ƒê√£ ƒë√≥ng popup\")\n",
        "            except:\n",
        "                print(\"‚úÖ Kh√¥ng c√≥ popup thi·∫øt b·ªã\")\n",
        "\n",
        "            # ƒêƒÉng nh·∫≠p\n",
        "            username_input = WebDriverWait(self.driver, 10).until(\n",
        "                EC.presence_of_element_located((By.NAME, \"username\"))\n",
        "            )\n",
        "            username_input.clear()\n",
        "            time.sleep(0.5)\n",
        "            username_input.send_keys(self.username)\n",
        "            print(f\"‚úÖ ƒê√£ ƒëi·ªÅn username: {self.username}\")\n",
        "\n",
        "            password_input = self.driver.find_element(By.NAME, \"password\")\n",
        "            password_input.clear()\n",
        "            time.sleep(0.5)\n",
        "            password_input.send_keys(self.password)\n",
        "            print(\"‚úÖ ƒê√£ ƒëi·ªÅn password\")\n",
        "\n",
        "            login_btn = self.driver.find_element(\n",
        "                By.CSS_SELECTOR,\n",
        "                \"button[type='submit'].btn-green-new\"\n",
        "            )\n",
        "            login_btn.click()\n",
        "            print(\"üñ±Ô∏è Nh·∫•n n√∫t ƒëƒÉng nh·∫≠p...\")\n",
        "\n",
        "            time.sleep(5)\n",
        "\n",
        "            if \"/login\" not in self.driver.current_url:\n",
        "                print(\"=\"*60)\n",
        "                print(\"‚úÖ ƒêƒÇNG NH·∫¨P TH√ÄNH C√îNG!\")\n",
        "                print(\"=\"*60)\n",
        "                return True\n",
        "            else:\n",
        "                print(\"‚ùå ƒêƒÉng nh·∫≠p th·∫•t b·∫°i\")\n",
        "                return False\n",
        "\n",
        "        except Exception as e:\n",
        "            print(f\"‚ùå L·ªói ƒëƒÉng nh·∫≠p: {str(e)}\")\n",
        "            return False\n",
        "\n",
        "    def claim_daily_reward(self):\n",
        "        \"\"\"Nh·∫≠n th∆∞·ªüng h√†ng ng√†y\"\"\"\n",
        "        try:\n",
        "            # Truy c·∫≠p trang\n",
        "            self.driver.get(\"https://vio.edu.vn/recommendations\")\n",
        "            time.sleep(3)\n",
        "\n",
        "            # Check ƒë√£ nh·∫≠n ch∆∞a\n",
        "            try:\n",
        "                already_claimed = self.driver.find_element(By.CLASS_NAME, \"_6alBj\")\n",
        "                if \"B·∫°n ƒë√£ nh·∫≠n qu√† h√¥m nay\" in already_claimed.text or \"ƒë√£ nh·∫≠n\" in already_claimed.text.lower():\n",
        "                    print(\"‚ÑπÔ∏è ƒê√£ nh·∫≠n th∆∞·ªüng h√¥m nay r·ªìi!\")\n",
        "                    return True\n",
        "            except:\n",
        "                pass\n",
        "\n",
        "            # T√¨m n√∫t nh·∫≠n th∆∞·ªüng\n",
        "            reward_btn = None\n",
        "\n",
        "            try:\n",
        "                reward_btn = self.driver.find_element(By.CLASS_NAME, \"_1ffUN\")\n",
        "            except:\n",
        "                try:\n",
        "                    reward_btn = self.driver.find_element(By.XPATH, \"//div[contains(text(), 'NH·∫¨N TH∆Ø·ªûNG')]\")\n",
        "                except:\n",
        "                    pass\n",
        "\n",
        "            if reward_btn:\n",
        "                btn_text = reward_btn.text.strip()\n",
        "\n",
        "                if \"NH·∫¨N TH∆Ø·ªûNG\" in btn_text.upper():\n",
        "                    self.driver.execute_script(\"arguments[0].scrollIntoView(true);\", reward_btn)\n",
        "                    time.sleep(1)\n",
        "\n",
        "                    try:\n",
        "                        reward_btn.click()\n",
        "                    except:\n",
        "                        self.driver.execute_script(\"arguments[0].click();\", reward_btn)\n",
        "\n",
        "                    time.sleep(3)\n",
        "                    print(\"üéâ ƒê√£ nh·∫•n n√∫t nh·∫≠n th∆∞·ªüng!\")\n",
        "                    return True\n",
        "\n",
        "            print(\"‚ö†Ô∏è Ch∆∞a c√≥ n√∫t nh·∫≠n th∆∞·ªüng\")\n",
        "            return False\n",
        "\n",
        "        except Exception as e:\n",
        "            print(f\"‚ùå L·ªói: {str(e)}\")\n",
        "            return False\n",
        "\n",
        "    def run_continuous(self, max_checks=10):\n",
        "        \"\"\"Ch·∫°y li√™n t·ª•c - TEST v·ªõi gi·ªõi h·∫°n s·ªë l·∫ßn check\"\"\"\n",
        "        try:\n",
        "            print(\"\\n\" + \"üöÄ \"*30)\n",
        "            print(\"BOT CH·∫†Y LI√äN T·ª§C - CH·∫æ ƒê·ªò TEST\")\n",
        "            print(\"üöÄ \"*30 + \"\\n\")\n",
        "\n",
        "            if not self.setup_driver():\n",
        "                return False\n",
        "\n",
        "            if not self.login():\n",
        "                return False\n",
        "\n",
        "            check_count = 0\n",
        "            while check_count < max_checks:\n",
        "                check_count += 1\n",
        "                print(f\"\\n{'='*60}\")\n",
        "                print(f\"üîÑ L·∫ßn check {check_count}/{max_checks} - {datetime.now().strftime('%H:%M:%S')}\")\n",
        "                print(f\"{'='*60}\")\n",
        "\n",
        "                result = self.claim_daily_reward()\n",
        "\n",
        "                if result:\n",
        "                    print(\"‚úÖ ƒê√£ nh·∫≠n th∆∞·ªüng ho·∫∑c ƒë√£ nh·∫≠n r·ªìi!\")\n",
        "                    print(\"üéâ HO√ÄN TH√ÄNH!\")\n",
        "                    break\n",
        "                else:\n",
        "                    if check_count < max_checks:\n",
        "                        print(f\"‚è≥ Ch∆∞a c√≥ n√∫t, ch·ªù 30 gi√¢y r·ªìi check l·∫°i...\")\n",
        "                        time.sleep(30)  # Test v·ªõi 30 gi√¢y thay v√¨ 5 ph√∫t\n",
        "\n",
        "            print(\"\\n\" + \"=\"*60)\n",
        "            print(f\"üìä T·ªïng k·∫øt: ƒê√£ check {check_count} l·∫ßn\")\n",
        "            print(\"=\"*60)\n",
        "\n",
        "        except Exception as e:\n",
        "            print(f\"‚ùå L·ªói: {str(e)}\")\n",
        "        finally:\n",
        "            if self.driver:\n",
        "                print(\"\\nüîí ƒê√≥ng tr√¨nh duy·ªát...\")\n",
        "                time.sleep(2)\n",
        "                self.driver.quit()\n",
        "\n",
        "# B∆∞·ªõc 5: Ch·∫°y Bot\n",
        "print(\"=\"*60)\n",
        "print(\"‚öôÔ∏è C·∫§U H√åNH TEST\")\n",
        "print(\"=\"*60)\n",
        "print(\"- Check t·ªëi ƒëa: 10 l·∫ßn\")\n",
        "print(\"- Th·ªùi gian ch·ªù gi·ªØa m·ªói l·∫ßn: 30 gi√¢y\")\n",
        "print(\"- T·ªïng th·ªùi gian t·ªëi ƒëa: ~5 ph√∫t\")\n",
        "print(\"=\"*60)\n",
        "print(\"\\nNh·∫•n Ctrl+C ƒë·ªÉ d·ª´ng bot b·∫•t c·ª© l√∫c n√†o\\n\")\n",
        "\n",
        "bot = VioEduBot(\n",
        "    username=\"mtl-215\",\n",
        "    password=\"abc123456\"\n",
        ")\n",
        "\n",
        "bot.run_continuous(max_checks=10)\n",
        "\n",
        "print(\"\\n‚ú® TEST HO√ÄN T·∫§T!\")"
